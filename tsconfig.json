{
	"compilerOptions": {
		"module": "CommonJS",
		"target": "ES2017",
		"sourceMap": true,
		"outDir": "./dist",
		"noImplicitAny": true,
		"declaration": true,
		"moduleResolution": "Node",
		"forceConsistentCasingInFileNames": true,
		"importsNotUsedAsValues": "error",
		"strict": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
